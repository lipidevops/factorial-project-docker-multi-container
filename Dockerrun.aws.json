{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "react-client",
            "image": "lipidocker1/factorial-project-react-client",
            "hostname": "react-client",
            "essential": false,
            "memory": 100
        },
        {
            "name": "express-server",
            "image": "lipidocker1/factorial-project-express-server",
            "hostname": "express-server",
            "essential": false,
            "memory": 100
        },
        {
            "name": "worker",
            "image": "lipidocker1/factorial-project-worker",
            "hostname": "worker",
            "essential": false,
            "memory": 100
        },
        {
            "name": "nginx",
            "image": "lipidocker1/factorial-project-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
             ],
             "links": ["react-client", "express-server"],
            "memory": 100
        }
    ]
}
